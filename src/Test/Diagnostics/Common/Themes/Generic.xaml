<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:XamlSourceInfoTest">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="{x:Static local:Helper.BadRelativeResourceDictionaryUri}"/>
        <ResourceDictionary Source="{x:Static local:Helper.GoodRelativeResourceDictionaryUri}"/>
    </ResourceDictionary.MergedDictionaries>
    
    <Style TargetType="{x:Type local:TestControl5}">
        <Setter Property="Template">
            
                <ControlTemplate TargetType="{x:Type local:TestControl5}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                    </Border>
                </ControlTemplate>
            
        </Setter>
    </Style>
</ResourceDictionary>
