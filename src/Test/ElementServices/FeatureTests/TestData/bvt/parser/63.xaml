
<Page xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:MappingPIGen1="clr-namespace:MSAvalon.Windows.Media;assembly=PresentationCore">
<StackPanel xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel.Resources>
    
        <Style x:Key="MyButtonStyle" TargetType="{x:Type Button}">

            <Setter Property="Template">
            
            <ControlTemplate TargetType="{x:Type Button}">
                <Canvas>        
                    <Rectangle Fill="LightBlue" />
                    
                    <!--<ContentPresenter 
                                Margin="15,15,15,15"/>-->
                    <ContentPresenter Content="hi" Margin="15,15,15,15" />
            
                </Canvas>
            </ControlTemplate>
            
            </Setter>
        </Style>
        
    </StackPanel.Resources>

    <Button Style="{MyButtonStyle}">Button Text</Button>           
          
</StackPanel>
</Page>
