<DockPanel
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cmn="clr-namespace:Avalon.Test.CoreUI.CoreInput;assembly=ElementServicesTest"
    Name="Parent"
    Background="Green">

  <DockPanel.Resources>
    <Style TargetType="{x:Type cmn:DialogOpenOnPropertyChange}" x:Key="{x:Type cmn:DialogOpenOnPropertyChange}">
      <Setter Property="Template">
        
          <ControlTemplate TargetType="{x:Type cmn:DialogOpenOnPropertyChange}">
            <Border 
              Background="Maroon">
              <ContentPresenter />
            </Border>
          </ControlTemplate>
        
      </Setter>
    </Style>
  </DockPanel.Resources>
  <cmn:DialogOpenOnPropertyChange Name="Child" IsBoundMouseOver="{Binding ElementName=Child, Path=IsMouseOver}" TestType="BoundMouseProperty" Margin="40">
    <Canvas Background="Blue" Margin="10"  Height="200" Width="200" Name="Grandchild" />
   </cmn:DialogOpenOnPropertyChange>
</DockPanel>