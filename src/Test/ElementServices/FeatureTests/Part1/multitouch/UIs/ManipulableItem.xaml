<UserControl x:Class="Microsoft.Test.Input.MultiTouch.Tests.ManipulableItem"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <UserControl.Resources>
    <Style TargetType="CheckBox">
      <Setter Property="FontSize" Value="9"/>
      <Setter Property="IsChecked" Value="True"/>
    </Style>
    <Style x:Key="NullButtonStyle" TargetType="Button">
      <Setter Property="Template">
        
          <ControlTemplate TargetType="Button">
            <ContentPresenter/>
          </ControlTemplate>
        
      </Setter>
    </Style>
  </UserControl.Resources>
  <Grid>
    <!-- main body of item -->
    <Ellipse Fill="White" Stroke="Black" StrokeThickness="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
    
    <!-- indicator for area where scaling/rotation isn't doable -->
    <Ellipse x:Name="DeadZone">
      <Ellipse.Fill>
        <RadialGradientBrush>
          <GradientStop Offset="0" Color="#00FF0000"/>
          <GradientStop Offset="0.7" Color="#00FF0000"/>
          <GradientStop Offset="1" Color="#60FF0000"/>
        </RadialGradientBrush>
      </Ellipse.Fill>
    </Ellipse>

    <!-- pivot indicator -->
    <Button x:Name="PivotButton" Style="{StaticResource NullButtonStyle}">
      <Ellipse Width="15" Height="15">
        <Ellipse.Fill>
          <RadialGradientBrush GradientOrigin="0.4,0.4">
            <GradientStop Offset="0" Color="White"/>
            <GradientStop Offset="0.5" Color="Gray"/>
            <GradientStop Offset="1" Color="Black"/>
          </RadialGradientBrush>
        </Ellipse.Fill>
      </Ellipse>
    </Button>
    
    <!-- mode controls -->
    <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="10">
      <CheckBox x:Name="CanTranslate">Translate</CheckBox>
      <CheckBox x:Name="CanRotate">Rotate</CheckBox>
      <CheckBox x:Name="CanScale">Scale</CheckBox>
    </StackPanel>
  </Grid>
</UserControl>
