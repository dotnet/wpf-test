<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:drt="clr-namespace:DRT"
    >
  <Style x:Key="{x:Type drt:ManipulationBorder}" TargetType="{x:Type drt:ManipulationBorder}">
    <Setter Property="IsManipulationEnabled" Value="true" />
    <Setter Property="Background" Value="Red" />
    <Setter Property="BorderBrush" Value="Black" />
    <Setter Property="BorderThickness" Value="2" />
    <Setter Property="Width" Value="150" />
    <Setter Property="Height" Value="150" />
    <Setter Property="Template">
      
        <ControlTemplate TargetType="{x:Type drt:ManipulationBorder}">
          <Border 
              Background="{TemplateBinding Background}" 
              BorderBrush="{TemplateBinding BorderBrush}" 
              BorderThickness="{TemplateBinding BorderThickness}" 
              CornerRadius="3">
            <Grid>
              <Polygon 
                   Fill="Black"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Width="8"
                   Height="8">
                <Polygon.Points>
                  <Point X="0" Y="0" />
                  <Point X="8" Y="3" />
                  <Point X="3" Y="8" />
                </Polygon.Points>
              </Polygon>
              <Ellipse x:Name="CenterPoint"
                  Fill="DeepSkyBlue"
                  Stroke="Black"
                  StrokeThickness="1"
                  HorizontalAlignment="Left"
                  VerticalAlignment="Top"
                  Margin="-4,-4,0,0"
                  Width="5"
                  Height="5" />
            </Grid>
          </Border>
        </ControlTemplate>
      
    </Setter>
    <Style.Triggers>
      <Trigger Property="AreAnyTouchesOver" Value="True">
        <Setter Property="BorderBrush" Value="Cyan" />
      </Trigger>
    </Style.Triggers>
  </Style>
</ResourceDictionary>
