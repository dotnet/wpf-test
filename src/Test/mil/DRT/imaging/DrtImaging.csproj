<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <AssemblyName>DrtImaging</AssemblyName>
    <LinkSubsystem>console</LinkSubsystem>
    <TestCode>true</TestCode>
    <AssemblyIdentityVersionName>WCP</AssemblyIdentityVersionName>
    <OutputType>EXE</OutputType>
    <GenerateAssemblyAttribute>false</GenerateAssemblyAttribute>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>
  <ItemGroup>
    <Compile Include="$(DrtCommonRoot)\inc\drtbase.cs" />
    <Compile Include="DrtImaging.cs" />
    <Compile Include="WriteableInteropBitmap.cs" />
    <None Include="DrtFiles\*">
        <Link>\DrtFiles\DrtImaging\%(FileName)%(Extension)</Link>
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Include="DrtImagingD3DBin\x64\*" Condition="'$(Platform)' == 'x64'">
        <Link>%(FileName)%(Extension)</Link>
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Include="DrtImagingD3DBin\x86\*" Condition="'$(Platform)' != 'x64'">
        <Link>%(FileName)%(Extension)</Link>
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>
</Project>
