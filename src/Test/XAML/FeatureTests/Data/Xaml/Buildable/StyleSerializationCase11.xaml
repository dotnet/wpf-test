




<cmn:CustomCanvas xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:cc="http://XamlTestTypes" xmlns:cmn="clr-namespace:Microsoft.Test.Serialization.CustomElements;assembly=TestRuntime" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:S="clr-namespace:System;assembly=Mscorlib">
        <cmn:CustomCanvas.Resources>
        <!-- 3 in style2 matrix-->
            <Style x:Key="Style1" TargetType="{x:Type Button}">
                <Setter Property="DockPanel.Dock" Value="{DynamicResource myDock}" />
                <!--<Setter Property="FrameworkElement.Name">
                <Setter.Value>
                            MyId
                        </Setter.Value>
                </Setter>-->
                <Setter Property="Template">
                <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <TextBlock x:Name="myText" />
                <ControlTemplate.Triggers>

                <MultiTrigger>
                <MultiTrigger.Conditions>
                              <Condition Property="Background" Value="Red" />
                         </MultiTrigger.Conditions>
                <Setter TargetName="myText" Property="Foreground" Value="Red" />
                </MultiTrigger>
                </ControlTemplate.Triggers>
                </ControlTemplate>
                </Setter.Value>
                </Setter>
            </Style> 
            <Dock x:Key="myDock">Top</Dock>
        </cmn:CustomCanvas.Resources>
    <Button Name="Button1" Style="{DynamicResource Style1}" />
</cmn:CustomCanvas>

