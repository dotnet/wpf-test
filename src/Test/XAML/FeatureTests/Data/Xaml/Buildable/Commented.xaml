                        </EventTrigger.Actions>
                    </EventTrigger>
                </TextBox.Triggers>
                TextBox
            </TextBox>

            <!--FontSize Animation on TextBox-->
            <TextBox Height="75" Width="150">
                <TextBox.Triggers>
                    <EventTrigger RoutedEvent="TextBox.Loaded">
                        <EventTrigger.Actions>
